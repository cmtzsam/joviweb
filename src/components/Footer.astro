<script>
  import Swal from 'sweetalert2'
  (function () {
    const form = document.getElementById('footerFormBoletinForm');
    if (!form) return;

    const fields = [
      // { el: form.elements['email'], message: 'Por favor ingresa un correo válido.' },
      { el: form.elements['acceptPolicyBoletin'], message: 'Necesitas aceptar las políticas.' }
    ];

    function validateField(f) {
      const el = f.el;
      const msg = f.message;
      if (!el) return { ok: true };
      if (el.type === 'checkbox') {
        if (!el.checked) return { ok: false, msg };
        return { ok: true };
      }
      if (!el.value || !el.value.trim()) {
        return { ok: false, msg };
      }
      if (el.type === 'email') {
        const re = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;
        if (!re.test(el.value.trim())) {
          return { ok: false, msg };
        }
      }
      return { ok: true };
    }

    function showError(el, msg) {
      let feedback = el.parentElement.querySelector('.invalid-feedback');
      if (!feedback) {
        feedback = document.createElement('div');
        feedback.className = 'invalid-feedback';
        el.parentElement.appendChild(feedback);
      }
      feedback.textContent = msg;
      el.classList.add('is-invalid');
    }

    function clearError(el) {
      el.classList.remove('is-invalid');
      const fb = el.parentElement.querySelector('.invalid-feedback');
      if (fb) fb.textContent = '';
    }

    form.addEventListener('submit', async function (e) {
      e.preventDefault();

      let hasError = false;
      fields.forEach(f => {
        clearError(f.el);
      });
      fields.forEach(f => {
        const result = validateField(f);
        if (!result.ok) {
          showError(f.el, result.msg);
          hasError = true;
        }
      });

      if (hasError) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Por favor completa los campos correctamente.'
        });
        return;
      }

      const formData = new FormData(form);

      try {
        const resp = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });
        const json = await resp.json();
        if (resp.ok) {
          Swal.fire({
            icon: 'success',
            title: 'Correcto',
            text: 'Te has suscrito correctamente.'
          });
          form.reset();
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error al enviar',
            text: (json.error || 'No se pudo suscribir.')
          });
        }
      } catch (err) {
        console.error('Error en fetch:', err);
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Ocurrió un error inesperado. Intenta más tarde.'
        });
      }
    });
  })();
</script>  