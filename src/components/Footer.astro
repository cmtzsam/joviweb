<style>
.fullWidget {
  right: 15px;
  bottom: 15px;
  position: fixed;
  z-index: 8;
  display: none;
  display: flex;
  align-items: flex-end;
  transform: translateX(0);
  transition: all 0.2s linear;
}
.fullWidget .closeBtn {
  margin-bottom: 50px;
  transition: all 0.2s linear;
  transform: translateX(5px);
}
.fullWidget .closeBtn .hideWidget,
.fullWidget .closeBtn .showWidget {
  cursor: pointer;
}
.fullWidget .closeBtn .showWidget {
  display: none;
}
.fullWidget .closeBtn i {
  font-size: 18px;
}
.fullWidget.hiddenWidget {
  transform: translateX(-100%);
}
.fullWidget.hiddenWidget .closeBtn {
  transform: translateX(20px);
}

.sbutton {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  text-decoration: none !important;
  text-align: center;
  color: white;
  margin: 20px auto 0;
  box-shadow: 0px 5px 11px -2px rgba(0, 0, 0, 0.18), 0px 4px 12px -7px rgba(0, 0, 0, 0.15);
  cursor: pointer;
  -webkit-transition: all 0.1s ease-out;
  transition: all 0.1s ease-out;
  position: relative;
  /* padding: 0 20px; */
  border-radius: 50%;
}
.sbutton .copytxt {
  display: none;
  font-size: 12px;
  font-weight: bold;
  color: white;
  display: block;
  width: 100%;
  text-align: left;
}

.sbutton > i {
  font-size: 38px;
  line-height: 60px;
  transition: all 0.2s ease-in-out;
  transition-delay: 2s;
  color: white;
}

.sbutton.mainsbutton {
  background: linear-gradient(106.69deg, #995AF5 18.77%, #424EA6 59.06%, #00D9FF 97.71%);
}
.sbutton.mainsbutton .copytxt {
  display: none;
  font-size: 13px;
  text-align: center;
  padding: 0 0 0 5px;
}
.sbutton.mainsbutton i {
  font-size: 25px;
}

.sbutton.whatsapp {
  background: #00e676;
}

.sbutton.asesor {
  background: #e0125f;
}

.sbutton.zoom {
  background: #0c5cff;
}

.sbutton:active,
.sbutton:focus,
.sbutton:hover {
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);
}

.sbutton:not(:last-child) {
  width: 60px;
  height: 60px;
  margin: 20px auto 0;
  opacity: 0;
}
.sbutton:not(:last-child) .copytxt {
  padding-left: 10px;
}

.sbutton:not(:last-child) > i {
  font-size: 25px;
  line-height: 60px;
  transition: all 0.3s ease-in-out;
  display: block;
  text-align: center;
  width: 30px;
  margin-right: auto;
}

.sbuttons.activeWidget .sbutton:not(:last-child) {
  opacity: 1;
  width: 60px;
  height: 60px;
  margin: 15px auto 0;
}

.sbutton:nth-last-child(1) {
  -webkit-transition-delay: 25ms;
  transition-delay: 25ms;
}

.sbutton:not(:last-child):nth-last-child(2) {
  -webkit-transition-delay: 20ms;
  transition-delay: 20ms;
}

.sbutton:not(:last-child):nth-last-child(3) {
  -webkit-transition-delay: 40ms;
  transition-delay: 40ms;
}

.sbutton:not(:last-child):nth-last-child(4) {
  -webkit-transition-delay: 60ms;
  transition-delay: 60ms;
}

.sbutton:not(:last-child):nth-last-child(5) {
  -webkit-transition-delay: 80ms;
  transition-delay: 80ms;
}

.sbutton:not(:last-child):nth-last-child(6) {
  -webkit-transition-delay: 100ms;
  transition-delay: 100ms;
}
</style>

